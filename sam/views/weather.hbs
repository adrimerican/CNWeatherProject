<h1>Weather request</h1>
<form action="/weather" method="POST">
    <label for="city">city: </label>
    <input type="text" name="location">
    <input type="submit" value="submit">
</form>

<br>

{{#if err}}
    <h2>{{err}}</h2>
{{/if}}
{{#if listExists}}
    <h2>Today's weather in {{name}}:</h2>
    <ul class="info">
        {{#each data}}
            <li>{{@key}} : {{this}}</li>
        {{/each}}
    </ul>
{{/if}}

{{log data}}